<?xml version="1.0" encoding="utf-8"?>
<odoo><data>

    <record id="technical_team_view_search" model="ir.ui.view">
        <field name="name">technical.team.view.search</field>
        <field name="model">technical.team</field>
        <field name="arch" type="xml">
            <search string="Salesteams Search">
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="member_ids"/>
                <group expand="0" string="Group By...">
                    <filter string="Team Leader" name="team_leader" domain="[]" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="technical_team_view_form" model="ir.ui.view">
        <field name="name">technical.team.form</field>
        <field name="model">technical.team</field>
        <field name="arch" type="xml">
            <form string="Technical Sales Team">
                <div class="alert alert-info text-center" role="alert"
                    attrs="{'invisible': ['|', ('is_membership_multi', '=', True), ('member_warning', '=', False)]}">
                    <field name="member_warning"/>
                </div>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" string="Technical Sales Team"/>
                        <h1>
                            <field class="text-break" name="name" placeholder="e.g. Sfax"/>
                        </h1>
                        <div name="options_active"/>
                    </div>
                    <group>
                        <group name="left" string="Team Details">
                            <field name="active" invisible="1"/>
                            <field name="sequence" invisible="1"/>
                            <field name="is_membership_multi" invisible="1"/>
                            <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="member_company_ids" invisible="1"/>
                        </group>
                        <group name="right">
                        </group>
                    </group>
                    <notebook>
                        <page string="Members" name="members_users">
                            <field name="member_ids" mode="kanban"
                                class="w-100">
                                <kanban>
                                    <field name="id"/>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="avatar_128"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_card oe_kanban_global_click">
                                                <div class="o_kanban_card_content d-flex">
                                                    <div>
                                                        <img t-att-src="kanban_image('res.users', 'avatar_128', record.id.raw_value)"
                                                            class="o_kanban_image o_image_64_cover" alt="Avatar"/>
                                                    </div>
                                                    <div class="oe_kanban_details d-flex flex-column ml-3">
                                                        <strong class="o_kanban_record_title oe_partner_heading"><field name="name"/></strong>
                                                        <div class="d-flex align-items-baseline text-break">
                                                            <i class="fa fa-envelope mr-1" role="img" aria-label="Email" title="Email"/><field name="email"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                            <field name="technical_team_member_ids" mode="kanban"
                                class="w-100"
                                attrs="{'invisible': ['|', ('is_membership_multi', '=', True), ('is_membership_multi', '=', False)]}"
                                context="{
                                    'kanban_view_ref': 'technical_team_sale_order.technical_team_member_view_kanban_from_team',
                                    'form_view_ref': 'technical_team_sale_order.technical_team_member_view_form_from_team',
                                    'tree_view_ref': 'technical_team_sale_order.technical_team_member_view_tree_from_team',
                                    'default_technical_team_id': active_id,
                                }"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" help="Follow this salesteam to automatically track the events associated to users of this team."/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Technical Technical SALES TEAMS TREE VIEW + MUTI_EDIT -->
    <record id="technical_team_view_tree" model="ir.ui.view">
        <field name="name">technical.team.tree</field>
        <field name="model">technical.team</field>
        <field name="field_parent">child_ids</field>
        <field name="arch" type="xml">
            <tree string="Technical Sales Team" sample="1" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name" readonly="1"/>
                <field name="active" invisible="1"/>
                <field name="user_id" domain="[('share', '=', False)]" widget="many2one_avatar_user"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="technical_team_view_kanban" model="ir.ui.view">
        <field name="name">technical.team.view.kanban</field>
        <field name="model">technical.team</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="row">
                                <div class="col-6">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="col-6">
                                    <span class="float-right"><field name="user_id"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="technical_team_action_config" model="ir.actions.act_window">
        <field name="name">Technical Sales Teams</field>
        <field name="res_model">technical.team</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Technical Sales Team
            </p><p>
                Use Technical Sales Teams to organize your sales departments and draw up reports.
            </p>
        </field>
    </record>

    <record id="technical_team_member_view_kanban" model="ir.ui.view">
        <field name="name">technical.team.member.view.kanban</field>
        <field name="model">technical.team.member</field>
        <field name="arch" type="xml">
            <kanban quick_create="false"
                group_create="0"
                records_draggable="0"
                sample="1"
                default_group_by="technical_team_id"
                class="o_crm_team_member_kanban">
                <field name="user_id"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="ribbon ribbon-top-right" attrs="{'invisible': [('active', '=', True)]}">
                                <span class="bg-error">Archived</span>
                            </div>
                            <div class="o_kanban_card_content d-flex">
                                <div>
                                    <img t-att-src="kanban_image('res.users', 'avatar_128', record.user_id.raw_value)" class="o_kanban_image o_image_64_cover" alt="Avatar"/>
                                </div>
                                <div class="oe_kanban_details d-flex flex-column ml-3">
                                    <strong class="o_kanban_record_title oe_partner_heading"><field name="user_id"/></strong>
                                    <a type="open" class="nav-link p-0"><field name="technical_team_id"/></a>
                                    <div class="d-flex align-items-baseline text-break">
                                        <i class="fa fa-envelope mr-1" role="img" aria-label="Email" title="Email"/><field name="email"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="technical_team_member_view_kanban_from_team" model="ir.ui.view">
        <field name="name">technical.team.member.view.kanban.from.team</field>
        <field name="model">technical.team.member</field>
        <field name="inherit_id" ref="technical_team_sale_order.technical_team_member_view_kanban"/>
        <field name="mode">primary</field>
        <field name="priority">32</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='technical_team_id']" position="replace">
            </xpath>
        </field>
    </record>

    <record id="technical_team_member_view_form" model="ir.ui.view">
        <field name="name">technical.team.member.view.form</field>
        <field name="model">technical.team.member</field>
        <field name="arch" type="xml">
            <form string="Sales Men">
                <field name="active" invisible="1"/>
                <field name="is_membership_multi" invisible="1"/>
                <field name="member_warning" invisible="1"/>
                <field name="user_in_teams_ids" invisible="1"/>
                <field name="user_company_ids" invisible="1"/>
                <sheet>
                    <div class="alert alert-info text-center" role="alert"
                        attrs="{'invisible': [('member_warning', '=', False)]}">
                        <field name="member_warning"/>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="image_1920" widget='image' class="oe_avatar"
                        attrs="{'invisible': [('user_id', '=', False)]}"
                        options='{"preview_image": "image_128"}'/>
                    <div class="oe_title">
                        <label for="user_id" class="oe_edit_only"/>
                        <h1 class="d-flex">
                            <field name="user_id" class="flex-grow-1"
                                options="{'no_quick_create': True}"/>
                        </h1>
                    </div>
                    <group name="member_partner_info">
                        <group name="group_owner">
                            <field name="technical_team_id" kanban_view_ref="%(technical_team_sale_order.technical_team_view_kanban)s"/>
                        </group>
                        <group name="group_user">
                            <field name="company_id" attrs="{'invisible': [('user_id', '=', False)]}"
                                groups="base.group_multi_company"/>
                            <field name="email" attrs="{'invisible': [('user_id', '=', False)]}"/>
                            <field name="mobile" attrs="{'invisible': [('user_id', '=', False)]}"/>
                            <field name="phone" attrs="{'invisible': [('user_id', '=', False)]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="technical_team_member_view_form_from_team" model="ir.ui.view">
        <field name="name">technical.team.member.view.form.from.team</field>
        <field name="model">technical.team.member</field>
        <field name="inherit_id" ref="technical_team_sale_order.technical_team_member_view_form"/>
        <field name="mode">primary</field>
        <field name="priority">32</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_owner']" position="replace"/>
        </field>
    </record>

        <record id="technical_team_member_action" model="ir.actions.act_window">
        <field name="name">Team Members</field>
        <field name="res_model">technical.team.member</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new technical person
            </p><p>
                Link technical Persons to sales teams.
            </p>
        </field>
    </record>


        <menuitem id="technical_sales_team_config"
            name="Technical Sales Teams"
            parent="sale.menu_sale_config"
            action="technical_team_sale_order.technical_team_action_config"
            sequence="2"/>


</data>
</odoo>

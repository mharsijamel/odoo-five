<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="crm_lead_pist_form_view" model="ir.ui.view">
        <field name="name">crm.lead.pist.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='lead_priority']" position="inside">
                <field name="prospect_reference"  attrs="{'invisible': [('type', '=', 'opportunity')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
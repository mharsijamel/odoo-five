<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_line_form_inherit" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <notebook>
                <page string="Charges" name="charges">
                    <field name="charge_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="note"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </page>
            </notebook>
            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="onchange">action_reset_charges()</attribute>
            </xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <field name="cost_check" attrs="{'invisible': [('move_type', 'not in', ['in_invoice', 'in_refund'])]}"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree" position="inside">
                <field name="cost_product"/>
                <field name="product_part"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="cost_check" attrs="{'invisible': [('move_type', 'not in', ['in_invoice', 'in_refund'])]}"/>
            </field>
        </field>
    </record> 
</odoo>

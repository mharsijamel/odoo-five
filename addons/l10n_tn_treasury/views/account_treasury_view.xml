<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_treasury_form">
            <field name="name">account.treasury.form</field>
            <field name="model">account.treasury</field>
            <field name="arch" type="xml">
                <form string="Treasury Document" create="false" edit="false">
                    <header>
                        <button name="button_unpaid" states="versed" string="Chèque/Traite Impayé" type="object" />
                        <button name="check_paid" states="notice" string="Chèque/Traite Versé" type="object" />
<!--                        <field name="type_transaction" invisible="1"/>-->
<!--                        <button name="check_paid_sortant" states="in_cash" string="Chèque/Traite Sortant Versé" type="object" attrs="{'invisible': [('type_transaction','=','payment')]}"/>-->
                        <field name="state" widget="statusbar"
                               statusbar_colors='{"notice":"red","cancel":"gray","paid":"green"}' clickable="True"/>
                    </header>
                    <sheet string="Treasury Document">
                        <h1>
                            <label for="name"/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group>
                            <group>
                                <field name="amount" widget="monetary"
                                       options="{'currency_field': 'currency_id','digits': 'Product Price'}"/>
<!--                                <field name="currency_id" invisible="1"/>-->
<!--                                <field name="partner_id" options="{'no_create': True, 'no_open': True}"/>-->
                                <field name="holder"/>
<!--                                <field name="order_to"/>-->
                                <field name="invoice_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="company_id"/>
<!--                                <field name="journal_id" options="{'no_create': True, 'no_open': True}"/>-->
<!--                                <field name="type" widget="selection"/>-->

                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Treasury information">
                                <group>
                                    <group>
                                        <field name="bank_origin" options="{'no_create': True, 'no_open': True}"/>
                                        <field name="maturity_date"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Payment">
                                <group>
                                    <group>

                                        <field name="payment_type" colspan="4"/>
                                        <field name="payment_method_line_id" colspan="4"/>

                                        <field name="payment_id" colspan="4"
                                               options="{'no_create': True, 'no_open': False}"/>
                                        <field name="bank_target" colspan="4"
                                               options="{'no_create': True, 'no_open': False}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="account_treasury_tree">
            <field name="name">account.treasury.tree</field>
            <field name="model">account.treasury</field>
            <field name="arch" type="xml">
                <tree string='Treasury Document' create="false" edit="false"

                      decoration-info="state=='versed'"
                      decoration-danger="state == 'notice'"
                      decoration-success="state == 'paid'">
                    <field name="holder"/>

<!--                    <field name="value" sum="Total" widget="monetary"-->
<!--                           options="{'currency_field': 'currency_id','digits': 'Product Price'}"/>-->
<!--                    <field name="currency_id" invisible="1"/>-->
<!--                    <field name="clearing_date"/>-->
                    <field name="bank_origin"/>
                    <field name="name"/>
<!--                    <field name="order_to"/>-->
                    <field name="amount"/>
                    <field name="invoice_ids" widget="many2many_tags"/>
<!--                    <field name="type"/>-->
<!--                    <field name="type_transaction"/>-->
                    <field name="payment_type"/>
                    <field name="maturity_date"/>
                    <field name="payment_method_line_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="account_treasury_search">
            <field name="name">account.treasury.search</field>
            <field name="model">account.treasury</field>
            <field name="arch" type="xml">
                <search string="Search Treasury Documents">
                    <!-- Search by name and amount -->
                    <field name="name" string="Nom"/>
                    <field name="amount" string="Amount"/>
                    <field name="state" string="statut"/>
                    <separator/>
                    <!-- Filters for payment_type and state -->
                    <filter name="payment_type_filter" string="Encaissement" domain="[('payment_type', '=', 'inbound')]"/>
                    <filter name="payment_type_filter" string="Décaissement" domain="[('payment_type', '=', 'outbound')]"/>
                    <separator/>
                    <filter name="state_incash" string="En Caisse" domain="[('state', '=', 'in_cash')]"/>
                    <filter name="state_versed" string="Encours" domain="[('state', '=', 'versed')]"/>             
                    <filter name="state_paid" string="Versé" domain="[('state', '=', 'paid')]"/>
                    <filter name="state_notice" string="Notice" domain="[('state', '=', 'notice')]"/>
                    <separator/>
                    <!-- Group by fields -->
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_by_state" context="{'group_by':'state'}"/>
                        <filter string="Payment Type" name="group_by_payment_type" context="{'group_by':'payment_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_account_treasury" model="ir.actions.act_window">
            <field name="name">Treasury</field>
            <field name="res_model">account.treasury</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="account_treasury_search"/>
        </record>
        

    </data>

</odoo>
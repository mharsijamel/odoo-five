<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="account_vesement_form">
            <field name="name">account.installment.form</field>
            <field name="model">account.installment</field>
            <field name="arch" type="xml">
                <form string="Vesement Document">
                    <header>
                        <button name="button_validate" states="draft" string="Validate" type="object" />
                        <button name="button_cancel"   states="valid" string="Cancel" type="object" groups="account.group_account_manager"/>
                        <button name="button_draft"    states="cancel" string="Set to Draft" type="object" groups="account.group_account_manager"/>
                        <field name="state" widget="statusbar" statusbar_colors='{"validate":"blue","cancel":"gray"}'/>
                    </header>
                    <sheet string="Vesement Document" >
                        <h1><field name="name" class="oe_inline" readonly="1"/></h1>
                        <group>
                            <group>
                                <field name="date_vesement" required="1"/>
                                <field name="bank_target" required="1" widget="selection"/>
                                <field name="journal_id" required="1" widget="selection"/>
                                <field name="company_id" required="1" widget="selection"/>
                            </group>
                            <group>
                                <field name="number"/>
                                <field name="date_from" required="1"/>
                                <field name="date_to" required="1"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Treasury">
                                <field name="treasury_ids" colspan="4" nolabel="1" domain="[('state', '=', 'in_cash')]" options="{'no_create': True}">
                                    <tree create="false" edit="false" delete="true" editable="bottom">
        <!--                                <field name="document_id"/>-->
        <!--                                <field name="partner_id"/>-->
                                        <field name="name"/>
                                        <field name="holder" readonly="1"/>
                                        <field name="maturity_date"/>
                                        <field name="bank_origin"/>
                                        <field name="invoice_ids" widget="many2many_tags"/>
                                        <field name="state"/>
                                        <field name="amount" sum="Total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="note" colspan="4" nolabel="1"/>
                            </page>
                            <page string="Journal Items" attrs="{'invisible': [('state','!=','valid')]}">
                                <field name="move_ids" readonly="1">
                                    <tree string="Journal Items">
                                        <field name="move_id"/>
                                        <field name="ref"/>
                                        <field name="date"/>
                                        <field name="statement_id"/>
                                        <field name="partner_id"/>
                                        <field name="account_id"/>
                                        <field name="name"/>
                                        <field name="debit"/>
                                        <field name="credit"/>
                                        <!--<field name="state"/>-->
                                        <!--<field name="reconcile_id"/>-->
                                        <field name="amount_currency" groups="base.group_multi_currency"/>
                                        <field name="currency_id" groups="base.group_multi_currency"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="account_vesement_tree">
            <field name="name">account.installment.tree</field>
            <field name="model">account.installment</field>
            <field name="arch" type="xml">
                <tree string='Vesement Document'>
                    <field name="name"/>
                    <field name="date_vesement"/>
                    <field name="bank_target"/>
                    <field name="amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>











    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>

<odoo>
     <record id="view_account_journal_form_inherit_" model="ir.ui.view">
        <field name="name">account.journal</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="temporary_bank_journal" attrs="{'invisible': [('type', '!=', 'bank')]}"  />
            </xpath>
            <xpath expr="//field[@name='default_account_id']" position="after">
                <field name="withdrawal_account" groups="account.group_account_readonly" attrs="{'required': [('id', '!=', False), ('type', '=', 'bank')], 'invisible': [('type', '!=', 'bank')]}"/>
            </xpath>
        </field>
    </record>
        <record id="checkbook_view_account_journal_form_inherit" model="ir.ui.view">
      <field name="name">account.journal.form</field>
      <field name="model">account.journal</field>
      <field name="inherit_id" ref="outgoing_checkbook.checkbook_view_account_journal_form"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='treasury_settings']" position="attributes">
            <attribute name="attrs">{'invisible': [('temporary_bank_journal', '!=', True)]}</attribute>
        </xpath>
      </field>
    </record>
</odoo>

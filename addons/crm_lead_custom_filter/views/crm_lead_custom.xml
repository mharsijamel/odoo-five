<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="crm_lead_view_search_custom" model="ir.ui.view">
        <field name="name">crm.lead.search.opportunity</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='activity_state']" position="after">
                <field name="installation_type"/>
                <field name="power_level"/>
                <field name="cin_number"/>
                <field name="partner_vat"/>
                <field name="counter_id"/>
                <separator/>
                <filter name="power_level" string="Nb Kilos" domain="[]" context="{'group_by':'power_level'}"/>
                <filter name="installation_type" string="Type d'usage" domain="[]" context="{'group_by':'installation_type'}"/>
                <filter name="counter_id" string="Compteur" domain="[]" context="{'group_by':'counter_id'}"/>
<!--                <field name="partner_id.customer_reference"/>-->
            </xpath>
        </field>
    </record>

</odoo>
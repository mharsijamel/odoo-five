<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_check_wifak">
        <t t-call="web.html_container">
            <div class="header" />
            <div class="article">
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="page-break-after: always; position: relative; padding-bottom: 20mm;">
                        <div style="font-size:12px; position: absolute; left: 60mm; top: 54mm;">
                            Sfax  <span style="margin-left: 15mm;"/>     <span style="font-weight: bold;" t-field="o.date"/>
                        </div>
                        <div style="font-size:12px; font-weight: bold;position: absolute; top: 5mm; left: 145mm;">
                            <span style="font-weight: bold;" t-esc="'%.2f' % (o.amount)"/>
                        </div>
                        <span t-esc="o.check_amount_in_words" style="font-size:12px; font-weight: bold;position: absolute; left: 25mm; top: 20mm;" />
                        <div style="font-size:12px; position: absolute; top: 30mm; left: 40mm;">
                            <span style="font-weight: bold;" t-field="o.partner_id.name"/>
                        </div>
                    </div>
                    <p style="page-break-before:always;"> </p>
                </t>
            </div>
        </t>
    </template>
</odoo>

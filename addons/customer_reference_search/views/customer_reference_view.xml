<?xml version="1.0" encoding="UTF-8"?>
<odoo>
      <record id="customer_reference_view_list" model="ir.ui.view">
        <field name="name">customer.reference.tree</field>
        <field name="model">customer.reference</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false" >
                <field name="name"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>
<!--    form view-->
    <record id='customer_reference_view_form' model='ir.ui.view'>
            <field name="name">customer.reference.form</field>
            <field name="model">customer.reference</field>
             <field name="priority">99</field>
            <field name="arch" type="xml">
               <form create="false" delete="false" edit="false"  string="Counter Number">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" readonly="1"/>
                                <field name="name" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <record id="customer_reference_search_view" model="ir.ui.view">
        <field name="name">customer.reference.view.search</field>
        <field name="model">customer.reference</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter name="name" context="{'group_by' : 'name'}" string="name"/>
                    <filter name="partner_id" context="{'group_by' : 'partner_id'}" string="Partner"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
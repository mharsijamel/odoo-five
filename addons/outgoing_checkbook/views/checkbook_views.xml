<?xml version="1.0" encoding="UTF-8"?>
<odoo>
     <record id="view_account_checkbook_addd_form" model="ir.ui.view">
            <field name="name">account.checkbook.form</field>
            <field name="model">account.check.book</field>
            <field name="priority" eval="99"/>
            <field name="arch" type="xml">
                <form create="false" edit="false">
<!--                    <header>-->
<!--                        <button name="to_dir" type="object" string="Retourner à la direction" attrs="{'invisible':[('emplacement','=','dir')]}" />-->
<!--                        <button name="to_fin" type="object" string="Emplacement Finance" attrs="{'invisible':[('emplacement','=','fin')]}" />-->
<!--                        <button name="to_compta" type="object" string="Emplacement Comptabilité" attrs="{'invisible':[('emplacement','=','compta')]}" />-->

<!--                        <field name="state" widget="statusbar" />-->
<!--                        <field name="emplacement" widget="statusbar" />-->
<!--                    </header>-->
                    <sheet>
                        <group>
                            <field name="composed_name" string="Libellé"/>
                            <field name="bank_id" readonly="0" force_save="1"/>
                            <field name="premier_numero" readonly="0" force_save="1" />
                            <field name="dernier_numero" readonly="0" force_save="1" />
                        </group>
                        <group>
                            <field name="check_ids" nolabel="1">
                                <tree string="Chèques"
                                      decoration-muted="state == 'used'"
                                      decoration-info="state == 'reserved'"
                                      decoration-danger="state == 'cancelled'" limit="50">
                                    <field name="composed_name" string="Numéro"/>
                                    <field name="checkbook_id"/>
                                    <field name="bank_id"/>
                                    <field name="payment_id"/>
                                    <field name="libelle"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <!-- Add chatter and followers widget -->
                <div class="oe_chatter">
                    <!-- Followers view -->
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <!-- Chatter view -->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>

            </field>
        </record>



            <!-- Account check book views -->
    <record id="view_account_checkbook_form" model="ir.ui.view">
            <field name="name">account.checkbook.form</field>
            <field name="model">account.check.book</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <header>
                        <button name="to_dir" type="object" string="Retourner à la direction" attrs="{'invisible':[('emplacement','=','dir')]}" />
                        <button name="to_fin" type="object" string="Emplacement Finance" attrs="{'invisible':[('emplacement','=','fin')]}" />
                        <button name="to_compta" type="object" string="Emplacement Comptabilité" attrs="{'invisible':[('emplacement','=','compta')]}" />

                        <field name="state" widget="statusbar" />
                        <field name="emplacement" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <field name="composed_name" string="Libellé"/>
                            <field name="bank_id" readonly="1" force_save="1"/>
                            <field name="premier_numero" readonly="1" force_save="1" />
                            <field name="dernier_numero" readonly="1" force_save="1" />
                        </group>
                        <group>
                            <field name="check_ids" nolabel="1">
                                <tree string="Chèques"
                                      decoration-muted="state == 'used'"
                                      decoration-info="state == 'reserved'"
                                      decoration-danger="state == 'cancelled'" limit="50">
                                    <field name="composed_name" string="Numéro"/>
                                    <field name="checkbook_id"/>
                                    <field name="bank_id"/>
                                    <field name="payment_id"/>
                                    <field name="libelle"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <!-- Add chatter and followers widget -->
                <div class="oe_chatter">
                    <!-- Followers view -->
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <!-- Chatter view -->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>

            </field>
        </record>

        <record id="view_account_checkbook_tree" model="ir.ui.view">
            <field name="name">account.checkbook.tree</field>
            <field name="model">account.check.book</field>
            <field name="arch" type="xml">
                <tree string="Carnets de chèques"
                    decoration-muted="state == 'used'"
                    decoration-bf ="state == 'new'"  create="false" edit="false"  >
                    <field name="composed_name" string="Libellé"/>
                    <field name="bank_id"/>
                    <field name="emplacement"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

                     search view
        <record id="view_account_check_book_search" model="ir.ui.view">
            <field name="name">account.check.book.search</field>
            <field name="model">account.check.book</field>
            <field name="arch" type="xml">
                <search string="Carnets de chèques">
<!--                    <filter name="new" string="Nouveaux" domain="[('state', '=', 'new')]"/>-->
<!--                    <filter name="using" string="En utilisation" domain="[('state', '=', 'using')]"/>-->
<!--                    <filter name="used" string="Utilisés" domain="[('state', '=', 'used')]"/>-->
                                        <separator/>
                    <filter name="dir" string="Emplacement Direction" domain="[('emplacement', '=', 'dir')]"/>
                    <filter name="fin" string="Emplacement Finance" domain="[('emplacement', '=', 'fin')]"/>
                    <filter name="dir" string="Emplacement Comptabilité" domain="[('emplacement', '=', 'compta')]"/>
                    <separator/>
                    <group expand="0" string="Grouper Par...">
                        <filter
                                name="bank_id"
                                string="Banque"
                                icon="fa-user"
                                domain="[]"
                                context="{'group_by':'bank_id'}"
                        />
                        <filter
                                name="state"
                                string="Statut"
                                icon="fa-user"
                                domain="[]"
                                context="{'group_by':'state'}"
                        />
                        <filter
                                name="emplacement"
                                string="Emplacement"
                                icon="fa-user"
                                domain="[]"
                                context="{'group_by':'emplacement'}"
                        />


                    </group>
                </search>
            </field>
        </record>

</odoo>
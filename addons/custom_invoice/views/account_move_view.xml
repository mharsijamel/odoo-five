<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="invoice_account_move_view_inh" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="move_type" invisible="1"/>
                <field name="steg_credit" attrs="{'invisible':[('move_type', '!=', 'out_invoice')], 'readonly': [('state', '!=', 'draft')]}"/>
                <field name="sub_anme" attrs="{'invisible':[('move_type', '!=', 'out_invoice')], 'readonly': [('state', '!=', 'draft')]}"/>
                <field name="net_to_pay" force_save="1" readonly="1" attrs="{'invisible':[('move_type', '!=', 'out_invoice')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
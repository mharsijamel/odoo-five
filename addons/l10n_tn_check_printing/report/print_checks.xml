<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="ckus_checks">
    <div style="width:100%;display:block;">
        <t t-if="page['state'] == 'cancelled'">
            <div>VOID</div>
        </t>
        <div style="top: 2cm ; left: 6.51cm ; width: 1.47cm ; text-align: center ;" t-esc="page['date']"/>
        <div style="top: 1.07cm; left: 6.77cm; width: 1.08cm; text-align: left;">
			<t t-esc="page['amount'].replace(o.currency_id.symbol, '')"/>
		</div>
        <div  style="top: 1.07cm ; left: 6.7cm ; width: 1.08cm ; text-align: left ;" t-esc="page['partner_name']"/>
	    <div style="top: 1.45cm ; left: 0.25cm ; width: 7cm ; text-align: left ; font-weight: bold ; overflow: hidden ;" t-esc="page['amount_in_word']"/>
    </div>
</template>

</data>
</odoo>

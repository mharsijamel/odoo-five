<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <menuitem name="Complaint To Supplier"  parent="purchase.menu_purchase_root" id="complaint_to_supplier_menuitem" sequence="2" />


    <record id='complaint_to_supplier_action' model='ir.actions.act_window'>
        <field name="name">Complaint To Supplier</field>
        <field name="res_model">purchase.complaint</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create New Complaint
          </p>
        </field>
    </record>

    <menuitem name="Complaint To Supplier" action="complaint_to_supplier_action" parent="complaint_to_supplier_menuitem" id="complaint_to_supplier_menuitem_child" sequence="10" />

      <record id='complaint_to_supplier_waiting_action' model='ir.actions.act_window'>
        <field name="name">Complaint To Supplier Waiting For Approval</field>
        <field name="res_model">purchase.complaint</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
         <field name="domain">[('state','=','waiting')]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create New Complaint
          </p>
        </field>
    </record>
    <menuitem name="Complaint To Supplier Waiting for Approval" action="complaint_to_supplier_waiting_action" parent="complaint_to_supplier_menuitem" id="complaint_to_supplier_menuitem_waiting_child" groups="custom_purchase_order.group_res_purchase_logistic" sequence="20" />
</odoo>
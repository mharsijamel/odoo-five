<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
     <record id='complaint_to_supplier_supplire_view_action' model='ir.actions.act_window'>
        <field name="name">Complaint To Supplier</field>
        <field name="res_model">purchase.complaint</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
         <field name="view_id" ref="complaint_to_view_list"/>
         <field name="domain">[('partner_id','=',partner_id)]</field>
        <field name="target">new</field>
    </record>

  <record id="res_partner_view_inhiret_button" model="ir.ui.view">
      <field name="name">res.partner.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
          <button class="oe_stat_button" type="object" name="get_complaints" attrs="{'invisible': [('customer_rank','>=', 1)]}"  icon="fa-legal">
              <field name="customer_rank" invisible="1"/>
            <field string="Complaints" name="complaint_count" widget="statinfo"/>
          </button>
        </xpath>
      </field>
  </record>
  </data>
</odoo>
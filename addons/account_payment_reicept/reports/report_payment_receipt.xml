<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_payment_receipt_document_inherit" inherit_id="account.report_payment_receipt_document">
            <xpath expr="//table" position="after">
                <h3 t-if="o.treasury_id"><strong>Payment details: </strong></h3>
                <table class="table table-sm" t-if="o.treasury_id">
                    <thead>
                        <tr>
                            <th><span>Document Number</span></th>
                            <th><span>Maturity Date</span></th>
                            <th><span>Bank</span></th>
                            <th class="text-right"><span>Amount</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="o.treasury_id">
                            <tr>
                                <td>
                                    <span t-field="o.treasury_id.name"/>
                                </td>
                                <td>
                                    <span t-field="o.treasury_id.maturity_date"/>
                                </td>
                                <td>
                                    <span t-field="o.treasury_id.bank_origin.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="o.treasury_id.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </xpath>

        </template>

    </data>
</odoo>
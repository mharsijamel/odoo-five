<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="project_project_view_form_inherit" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
           <xpath expr="//header" position="inside">
               <button name="action_close" string="Close" type="object" class="oe_highlight" groups="post_installation.group_project_team_leader" states="open"/>
               <button name="action_open" string="Open" type="object" class="o_form_button_cancel" groups="post_installation.group_project_team_leader" states="closed,todo"/>
               <button name="action_cancel" string="Cancel" type="object" class="o_form_button_cancel" groups="post_installation.group_project_team_leader" states="closed,open"/>
               <button name="action_todo" string="To Do" type="object" class="o_form_button_cancel" groups="post_installation.group_project_team_leader" states="cancel"/>
               <field name="state" widget="statusbar"/>
           </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="post_installation_id" readonly="1"/>
            </xpath>
             <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='date_start']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='description']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='privacy_visibility']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='analytic_account_id']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='analytic_account_id']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='members_ids']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
             <xpath expr="//field[@name='date']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
             <xpath expr="//field[@name='tag_ids']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='label_tasks']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='vehicle']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
            <xpath expr="//field[@name='localisation']" position="attributes">
                <attribute name="attrs">{'readonly': [['state', '=', 'closed']]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="project_project_view_kanban_inherit" model="ir.ui.view">
        <field name="name">project.project.kanban</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
           <xpath expr="//kanban" position="attributes">
                <attribute name="default_group_by">state</attribute>
<!--               <attribute name="on_create">project.open_create_project</attribute>-->
           </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <!--    tree view-->
        <record id="concerned_users_view_list" model="ir.ui.view">
            <field name="name">concerned.users.tree</field>
            <field name="model">concerned.users</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>
        <!--    tree view-->
        <record id="concerned_users_view_form" model="ir.ui.view">
            <field name="name">concerned.users.form</field>
            <field name="model">concerned.users</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>

                                <field name="name"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="concerned_users_action" model="ir.actions.act_window">
            <field name="name">Concerned Users To Notify</field>
            <field name="res_model">concerned.users</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Concerned User To Notify
                </p><p>
                    Create a new Concerned User To Notify
                </p>
            </field>
        </record>


        <menuitem id="menu_sales_concerned_users"
            name="Concerned Users To Notify"
            parent="sale.sale_menu_root"
            sequence="30"
            action="concerned_users_action"
            groups="sales_team.group_sale_manager"/>


    </data>
</odoo>